{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2015",
        "moduleResolution": "node",
        "emitDecoratorMetadata": false,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": false,
        "removeComments": true,
        "sourceMap": true,
        "noEmitHelpers": false,
        "lib": ["es5", "dom", "es2017", "es2015"]
    },
    "awesomeTypescriptLoaderOptions": {
        "useBabel": true,
        "useCache": true,
        "emitRequireType": true
    },
    "exclude": [
        "node_modules",
        ".history",
        ".vscode",
        "dist"
    ]
}